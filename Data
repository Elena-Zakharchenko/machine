// Example program
#include <iostream>
#include <string>

struct Patient
{
    std::string name;
    std::string surname;
    int age;
    bool sex;
    std::string city;
    int visitAmount;
};

void addPatient(Patient patients[], int currentAmount)
{
    int currentId = currentAmount;
    currentAmount++;
    std::cout << "name:" << std::endl;
    std::cin >> patients[currentId].name;
    std::cout << "surname:" << std::endl;
    std::cin >> patients[currentId].surname;
    std::cout << "age:" << std::endl;
    std::cin >> patients[currentId].age;
    std::cout << "sex (female = 1, male = 0):" << std::endl;
    std::cin >> patients[currentId].sex;
    std::cout << "city:" << std::endl;
    std::cin >> patients[currentId].city;
    std::cout << "amount of visiting:" << std::endl;
    std::cin >> patients[currentId].visitAmount;
    std::cout << "ID:" << currentId << std::endl;
}

void Info(int currentId, int currentAmount, Patient patients[])
{
    if (currentId > currentAmount)
    {
        std::cout << "Error ID" << std::endl;
    }
    else
    {
        std::cout << "name:" << patients[currentId].name << std::endl;
        std::cout << "surname:" << patients[currentId].surname << std::endl;
        std::cout << "sex:";
        if (patients[currentId].sex)
        {
            std::cout << "female" << std::endl;
        }
        else
        {
            std::cout << "male" << std::endl;
        }
        std::cout << "city:" << patients[currentId].city << std::endl;
        std::cout << "amount of visiting:" << patients[currentId].visitAmount << std::endl;
    }
}

int main()
{
    int currentAmount = 0;
    Patient patients[100];
    char digit = 'Y';
    std::cout << "To add patient push Y" << std::endl;
    std::cout << "To find out the information about the patient push I" << std::endl;
    std::cout << "To quit the program push P" << std::endl;
    std::cin >> digit;
    
    do
    {
        if (digit == 'Y') 
        {
            addPatient(patients, currentAmount);
        }
        else if (digit == 'I')
        {
            int currentId = 0;
            std::cout << "Enter ID of the patient" << std::endl;
            std::cin >> currentId;
            Info(currentId, currentAmount, patients);
        }
        else if (digit == 'P')
        {
            break;
        }
        else
        {
            std::cout << "Error" << std::endl;
        }
    }while(true);
}
  
